{
  "name": "backend",
  "version": "0.0.1",
  "description": "express/mongodb backend app",
  "main": "index.js",
  "scripts": {
    "start": "NODE_ENV=production node server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "build:ui": "rm -rf build && cd ../frontend && CI=true npm run build && cp -r build ../backend",
    "deploy": "fly deploy --omit=dev",
    "deploy:full": "npm run build:ui && npm run deploy",
    "logs:prod": "fly logs",
    "lint": "eslint .",
    "test": "NODE_ENV=test jest --verbose --runInBand",
    "start:test": "NODE_ENV=test node server.js"
  },
  "author": "Leo Cheng",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.231.0",
    "@aws-sdk/s3-request-presigner": "^3.231.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "cron": "^2.1.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.6.5",
    "mongoose-autopopulate": "^0.16.1",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^3.3.4",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.6.0",
    "eslint": "^8.24.0",
    "jest": "^29.1.2",
    "nodemon": "^2.0.20",
    "supertest": "^6.3.0"
  },
  "jest": {
    "testEnvironment": "node"
  }
}
